    "version": "2.0.0",
    "tasks": [
        {
            "label": "ojgo",
            "type": "shell",
            "command": "oj t -c \"go run ${fileDirname}/main.go\" -d tests/",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}